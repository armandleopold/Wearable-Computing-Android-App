<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="aleopold.wc_app.MainActivity" android:minHeight="1800dp" android:nestedScrollingEnabled="true">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast sampling"
            android:id="@+id/start"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView" android:layout_toEndOf="@+id/textView5"/>
    <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_marginTop="23dp" android:layout_below="@+id/stop" android:layout_toEndOf="@+id/textView3"
            android:layout_marginStart="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/textClock" android:layout_alignStart="@+id/textView11"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Sampling"
            android:id="@+id/stop"
            android:layout_alignTop="@+id/start" android:layout_alignStart="@+id/textClock"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Activity Sensors Recorder"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Accelerometer : "
            android:id="@+id/textView3"
            android:layout_above="@+id/txtViewAxValue" android:layout_alignStart="@+id/textView6"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtViewAxValue"
            android:layout_centerVertical="true" android:layout_alignStart="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtViewAyValue"
            android:layout_below="@+id/txtViewAxValue" android:layout_alignStart="@+id/txtViewAxValue"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtViewAzValue"
            android:layout_below="@+id/txtViewAyValue" android:layout_alignStart="@+id/txtViewAyValue"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Magnetometer :"
              android:id="@+id/textView4"
              android:layout_marginTop="32dp"
              android:layout_below="@+id/txtViewAzValue" android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              android:id="@+id/txtViewMx"
              android:layout_below="@+id/textView4" android:layout_alignStart="@+id/txtViewAzValue"
              android:layout_marginTop="22dp" android:layout_alignEnd="@+id/textView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              android:id="@+id/txtViewMy"
              android:layout_below="@+id/txtViewMx" android:layout_alignStart="@+id/txtViewMx"
              android:layout_alignEnd="@+id/txtViewMx"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              android:id="@+id/txtViewMz"
              android:layout_below="@+id/txtViewMy" android:layout_alignStart="@+id/txtViewMy"
              android:layout_alignEnd="@+id/txtViewMy"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ax :"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/txtViewAxValue" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ay :"
            android:id="@+id/textView6"
            android:layout_alignBaseline="@+id/txtViewAyValue" android:layout_alignBottom="@+id/txtViewAyValue"
            android:layout_alignEnd="@+id/textView5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Az :"
            android:id="@+id/textView7"
            android:layout_above="@+id/textView4" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mx :"
            android:id="@+id/textView8" android:layout_above="@+id/txtViewMy" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My :"
            android:id="@+id/textView9" android:layout_alignBottom="@+id/txtViewMy"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mz :"
            android:id="@+id/textView10" android:layout_alignTop="@+id/txtViewMz"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nbr file created :"
            android:id="@+id/textView11" android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/start"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/nbfFiles" android:layout_below="@+id/textClock"
            android:layout_alignStart="@+id/textClock" android:layout_marginStart="24dp"
            android:layout_alignEnd="@+id/stop"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SampleInput"
              android:id="@+id/fdfdsf"
              android:layout_alignTop="@+id/sampleInput" android:layout_alignStart="@+id/textView11"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              android:id="@+id/sampleInput"
              android:layout_below="@+id/nbfFiles" android:layout_alignStart="@+id/nbfFiles"
              android:layout_alignEnd="@+id/txtViewMx"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medium Sampling"
            android:id="@+id/start2"
            android:layout_alignParentBottom="true" android:layout_alignStart="@+id/textView6"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LOW SAMPLING"
            android:id="@+id/start3"
            android:layout_alignBottom="@+id/start2" android:layout_alignStart="@+id/sampleInput"/>
</RelativeLayout>
